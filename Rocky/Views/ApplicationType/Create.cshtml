@model ApplicationType

<form method="post" asp-action="Create">
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">Add Application Type</h2>
        </div>
            <div class="row">
              <div class="col-8 p-2">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                </div>
                <div>

                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col p-2">
                           <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>

                        <div class="col p-2">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-in-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>

